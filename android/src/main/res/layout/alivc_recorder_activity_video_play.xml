<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <SurfaceView
        android:id="@+id/aliyun_play_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/aliyun_svideo_actionbar_bg">

        <ImageView
            android:id="@+id/aliyun_back"
            android:layout_width="@dimen/alivc_common_size_icon_40"
            android:layout_height="@dimen/alivc_common_size_icon_40"
            android:layout_marginLeft="@dimen/alivc_common_margin_15"
            android:layout_marginTop="@dimen/alivc_common_margin_10"
            android:layout_marginBottom="@dimen/alivc_common_margin_10"
            android:scaleType="centerInside"
            android:src="@mipmap/aliyun_svideo_icon_back" />

        <ImageView
            android:id="@+id/aliyun_next"
            android:layout_width="@dimen/alivc_common_size_icon_40"
            android:layout_height="@dimen/alivc_common_size_icon_40"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/alivc_common_margin_10"
            android:layout_marginRight="@dimen/alivc_common_margin_15"
            android:layout_marginBottom="@dimen/alivc_common_margin_10"
            android:scaleType="centerInside"
            android:src="@mipmap/aliyun_svideo_record_icon_next" />
    </FrameLayout>
</FrameLayout>
